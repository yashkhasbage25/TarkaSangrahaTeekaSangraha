{  
  "hosting": {  
    "public": "public",  
    "ignore": [  
      "firebase.json",  
      "**/.*",  
      "**/node_modules/**",  
      "**/.venv/**",  
      "**/doc/**",  
      "**/sanitized/**",  
      "**/*.py"  
    ],  
    "rewrites": [  
      {  
        "source": "**",  
        "destination": "/index.html"  
      }  
    ] 
  }  
}